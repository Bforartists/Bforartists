#!/usr/bin/python

Import ('env')

sources = env.Glob('*.cpp')

incs = '. #intern/moto/include'

cxxflags = []
if env['OURPLATFORM']=='win32-vc':
	cxxflags.append ('/GR')
	cxxflags.append ('/O2')

env.BlenderLib ( 'bf_scenegraph', sources, Split(incs), [], libtype=['core','player'], priority=[325,125], cxx_compileflags = cxxflags )
