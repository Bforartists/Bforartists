#!/usr/bin/python
import sys
Import ('env')

sources = env.Glob('intern/*.c')

incs = '. intern  #/intern/guardedalloc ../blenkernel ../blenlib ../makesdna ../imbuf ../editors/include'
incs += ' #/extern/glew/include'
incs += ' ' + env['BF_FREETYPE_INC']
incs += ' ' + env['BF_GETTEXT_INC']

defs = ['GLEW_STATIC']

if sys.platform == 'win32' or env['OURPLATFORM'] == 'linuxcross':
    defs.append('_WIN32')

if env['WITH_BF_INTERNATIONAL']:
    defs.append('WITH_INTERNATIONAL')

env.BlenderLib ( 'bf_blenfont', sources, Split(incs), Split(defs), libtype=['core','player'], priority=[210,210] )
